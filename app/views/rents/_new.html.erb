<%= simple_form_for [@animal, @rent] do |f| %>
  <div class="row ml-2 mr-2 justify-content-between ">
    <div>
      <%= f.input :begin_date,
                  as: :date,
                  html5: true,
                  required: true,
                  input_html: { class: "form-control", required: true }%>
    </div>
    <div>
      <%= f.input :end_date,
                  as: :date,
                  html5: true,
                  required: true,
                  input_html: { class: "form-control", required: true }%>
    </div>
  </div>
  <div class="pl-2 pr-2">
   <%= f.button :button, "Let's go!", type: :submit, class: 'btn btn-success btn-block'%>
  </div>
<% end %>
