<div>
  <%= image_tag cl_image_path (@animal.photo), height: 450, width: 400, crop: :fill %>
  <%= simple_form_for [@animal, @rent] do |f| %>
    <%= f.input :begin_date,
                as: :date,
                html5: true,
                hint: "we need a date",
                required: true,
                input_html: { class: "form-control", required: true }%>
    <%= f.input :end_date,
                as: :date,
                html5: true,
                hint: "we need a date",
                required: true,
                input_html: { class: "form-control", required: true }%>
    <%= f.button :button, "Let's go!", type: :submit, class: 'btn btn-success' %>
  <% end %>
</div>
