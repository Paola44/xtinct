<div class="container">
  <h1 class="text-center text-success">Add your animal</h1>

  <%= simple_form_for [:owner, @animal] do |f| %>
    <div class="form-inputs">
    <%= f.input :species %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :price_per_day %>
    <%= f.input :photo %>
    </div>
    <div class="form-actions text-center">
      <%= f.button :submit, class: 'btn btn-success btn-lg' %>
    <% end %>
  </div>
</div>
